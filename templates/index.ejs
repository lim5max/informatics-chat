<!DOCTYPE html>
<html>
  <head>
    <title><%= page_name %></title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 20%; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>

    <div id="users_div">
      
    </div>
    <form method="POST" action="/">
      <button>connect to the info chat</button></form>
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
       const socket = io();
       let div_users_online = document.getElementById('users_div')
       socket.on("broadcast", (data)=>{
        div_users_online.innerHTML = '';
        div_users_online.innerHTML = 'Online - '+(data.num_users)
       })
      
       socket.on("test", (data)=>{
        document.write(data)
       })
    </script>
</body>
</html>